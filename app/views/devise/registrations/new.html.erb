<div id="logreg-forms">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign up</h1>
    <div class="social-login">
        <button class="btn facebook-btn social-btn" type="button"><span><i class="fa fa-facebook-f"></i> Sign up with Facebook</span> </button>
    </div>
    <p style="text-align:center"> OR  </p>

    <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Name", autofocus: true, autocomplete: "name" %>

    <%= f.text_field :last_name, class: "form-control form-control-lg", placeholder: "Last Name", autocomplete: "last name" %>

    <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email", autocomplete: "email" %>

    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password", autocomplete: "new-password" %>

    <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirm Password", autocomplete: "new-password" %><br/>

    <div class="row pb-3">
      <div class="col-sm-4">
          <%= f.label "Register as:", class: "p" %>
      </div>
      <div class="col-sm-8">
          <%= f.select :role_id, Role.pluck(:name, :id) %>
      </div>
    </div>
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
    <%= link_to "Log in?", new_user_session_path, class: "btn btn-secondary btn-block"%>

  <% end %>
      
</div>


