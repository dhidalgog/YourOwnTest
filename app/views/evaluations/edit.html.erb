<!-- DETAILS -->
<section id="details">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-header">
            <h4>Edit Evaluation</h4>
          </div>
          <div class="card-body">
            <%= form_with(model: @evaluation, local: true) do |form| %>
              <% if @evaluation.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

                  <ul>
                  <% evaluation.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, class: "form-control"%>
              </div>
              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_field :description, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :n_questions %>
                <%= form.number_field :n_questions, class: "form-control" %>
              </div>

              <!-- ACTIONS -->
              <section id="actions" class="py-4 mb-4 bg-light">
                <div class="container">
                  <div class="row">
                    <div class="col-md-3">
                      <%= link_to evaluation_path, class: "btn btn-light btn-lock" do %>
                        <i class="fa fa-arrow-left"></i> Back To Your Evaluation
                      <% end %>
                    </div>
                    <div class="col-md-3">
                      <div class="form-group">
                        <%= form.submit "Save Changes", class: "btn btn-success btn-block" %>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <%= link_to @evaluation, class: "btn btn-danger btn-block", method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fa fa-trash"></i> Delete Post
                      <% end %>
                    </div>
                  </div>
                </div>
              </section>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>

<script>
  // Get the current year for the copyright
  $('#year').text(new Date().getFullYear());

  CKEDITOR.replace('editor1');
</script>
